{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/axios"],
    "typeRoots": ["types"]
  },
  "include": [
    "components/**/*.vue",
    "layouts/**.*.vue",
    "middleware/**/*.ts",
    "pages/**/*.vue",
    "plugins/**/*.vue",
    "store/**/*.ts",
    "styles/**/*.pcss",
    "types/**/*.ts",
    "assets/**/*.svg"
  ],
  "files": ["extensions.d.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
